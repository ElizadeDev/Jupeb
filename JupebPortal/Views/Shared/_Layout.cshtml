@using Microsoft.AspNetCore.Identity;

@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JupebPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JupebPortal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/sitetemplate/css/style.css" rel="stylesheet" />

</head>


<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="~/images/elizade.png" width="50" height="50" asp-append-version="true" />
                    @*@_configuration["AppName"]*@
                </a>
                
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="http://www.elizadeuniversity.edu.ng" target="_blank">Website</a></li>
                    </ul>
                    @{
                        var picPath = (await UserManager.GetUserAsync(User))?.ApplicationForm?.PicturePath;
                    }

                    <div class="nav-item">
                    @if(picPath != null)
                    {
                            <img src="~/ApplicantPhotos/@picPath"
                             class="rounded-circle"
                             height="30"
                             width="30"
                             alt=""
                            loading="lazy" />
                        }
                        else
                        {
                            <i class="bi bi-person-circle"></i>
                        }

                    </div>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>


    </header>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" class="mb-5">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>

            <div class="p-4 ">
                <h1><a asp-action="Index" asp-controller="Home" class="logo text-warning">J U P E B <span>Admission Portal</span></a></h1>

                <ul class="list-unstyled components mb-2">
                    <li class="active text-warning">
                        <a asp-action="Index" asp-controller="Home" aria-expanded="false">DASHBOARD</a>
                        @if (User.IsInRole("Applicant"))
                        {
                            <ul class="list-unstyled components mb-2">
                                @{
                                    var isSubmitted = false;
                                    if (ViewBag.applicationForm != null)
                                    {
                                        isSubmitted = ViewBag.applicationForm.isSubmitted;
                                    }
                                }
                                @if(isSubmitted == true){
                                    <li class="active">
                                        <a href="https://euconnect.com.ng/application-form-2023-2024/" target="_blank"><span class="fa fa-home mr-3"></span> Complete Bio-Data Form</a>
                                    </li>
                                    <li class="active">
                                        <a href="https://euconnect.com.ng/appointment/" target="_blank"><span class="fa fa-home mr-3"></span> Hostel Reservation</a>
                                    </li>
                                }
                                
                                @* <li>
                            <a href="#"><span class="fa fa-user mr-3"></span> Payments</a>
                            </li>*@


                            </ul>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="true" class="dropdown-toggle">ADMIN</a>
                            <ul class="collapse show list-unstyled" id="pageSubmenu">
                                <li>
                                    <a asp-area="" asp-controller="Programme" asp-action="Index">Programmes</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Subject" asp-action="Index">OLevel Subjects</a>
                                </li>

                                <li>
                                    <a asp-area="" asp-controller="Role" asp-action="Index">Manage Role</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="ApplicationForm" asp-action="Index">Applicants</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Payments" asp-action="Index">Payments</a>
                                </li>
                               @* <li>
                                    <a asp-area="" asp-controller="AdmittedStudents" asp-action="Index">Grant Admission</a>
                                </li>*@

                            </ul>
                        }

                        @if (User.IsInRole("Admission officer"))
                        {
                            <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="true" class="dropdown-toggle">ADMISSION OFFICER</a>
                            <ul class="collapse show list-unstyled" id="pageSubmenu">

                                <li>
                                    <a asp-area="" asp-controller="ApplicationForm" asp-action="Index">Applicants</a>
                                </li>

                                @*<li>
                                    <a asp-area="" asp-controller="AdmittedStudents" asp-action="Index">Grant Admission</a>
                                </li>*@
                                <li>
                                    <a asp-area="" asp-controller="Payments" asp-action="GetSuccessfulPayments">Payments</a>
                                </li>

                            </ul>
                        }

                        @if (User.IsInRole("Bursary officer"))
                        {
                            <a href="#bursarySubmenu" data-toggle="collapse" aria-expanded="true" class="dropdown-toggle">BURSARY MENU</a>
                            <ul class="collapse show list-unstyled" id="bursarySubmenu">

                                <li>
                                    <a asp-area="" asp-controller="Payments" asp-action="GetSuccessfulPayments">Payments</a>
                                </li>

                            </ul>
                        }

                        <ul class="list-unstyled components mb-2">
                            <li>
                                <form method="get" class="form-inline" asp-area="Identity" asp-page="/Account/Manage/ChangePassword" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <span class="fa fa-user mr-3"></span><button type="submit" class="link btn text-light">Manage Account</button>
                                </form>

                            </li>
                            <li>
                                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <span class="fa fa-user mr-3"></span><button type="submit" class="link btn text-light">Logout</button>
                                </form>
                            </li>
                            @*<li>
                            <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"><span class="fa fa-user mr-3"></span> Logout</a>
                            </li>*@

                        </ul>

                </ul>
            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
            @RenderSection("breadcrumb", required:false)
            @*<partial name="_Notification" />*@
            @RenderBody()
            <br /><br />
        </div>



        <footer class=" footer text-muted text-center">
            <div class="container">
                &copy; Elizade University - @DateTime.Now.Year
            </div>
        </footer>
    </div>

    <script src="~/sitetemplate/js/jquery.min.js"></script>
    <script src="~/sitetemplate/js/popper.js"></script>
    <script src="~/sitetemplate/js/bootstrap.min.js"></script>
    <script src="~/sitetemplate/js/main.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.print.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>





