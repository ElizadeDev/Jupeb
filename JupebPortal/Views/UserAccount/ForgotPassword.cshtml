@model JupebPortal.Models.ForgotPassword

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/logintemplate/css/style.css" rel="stylesheet" />

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<div class="icon d-flex align-items-center justify-content-center">
                            <img class ="img" src="~/images/elizade.png" />
						</div>
						<h3 class="text-center mb-4">Forgot Password</h3>
                        <hr />
                         @if (Model?.EmailSent == true)
                        {
                            <div class="alert alert-success" role="alert">
                                <p>
                                    We have sent an email on your registered email.
                                </p>
                            </div>
                        }
                        else
                        {
                        <form id="account" method="post" class="login-form">

                                <div>
                                    <p class="text-center mb-4">
                                        Forgot your password?
                                        <br>
                                    
                                    <span> No worries you can reset it easily.</span>
                                    </p>
                                </div>
							<div asp-validation-summary="All" class="text-danger" role="alert"></div>
                                @*<div asp-validation-summary="All" class="text-danger"></div>*@
							<div class="form-group">
                                    <input class="form-control rounded-left" required type="text" placeholder="Input your registered email" asp-for="@Model.Email">
								<span asp-validation-for="@Model.Email" class="text-danger"></span>
							</div>
							
							<div class="form-group">
                                <button type="submit" class="btn btn-primary rounded submit p-2 px-5"><span class="text-warning"><strong> Reset</strong></span></button>
							</div>
						</form>
                        }
                        <div class="form-group">
                            <a class="txt2" asp-area="Identity" asp-page="/Account/Login"><b>Login</b></a>


                        </div>
                       
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="js/jquery.min.js"></script>
	<script src="js/popper.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/main.js"></script>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />


    <script type="text/javascript">
        $('#forgotBtn').click(function (e) {
            var html = `Sending link . . . Please wait <div class="spinner-border text-success" role="status"></div>`;
            $('#spinnerDiv').html(html);
        });


        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <script src="js/main.js"></script>
}





















