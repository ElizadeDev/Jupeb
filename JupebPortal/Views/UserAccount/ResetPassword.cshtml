@model JupebPortal.Models.ResetPassword

@{
    ViewData["Title"] = "ResetPassword";
    Layout = null;
}


<html lang="en">
<head>
    <title>Reset</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/logintemplate/css/style.css" rel="stylesheet" />

</head>
<body>

<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<div class="icon d-flex align-items-center justify-content-center">
                            <img class ="img" src="~/images/elizade.png" />
						</div>
                        <h3 class="text-center mb-4">Reset Password</h3>
                        <hr />
                        @if (Model?.IsSuccess == true)
                        {
                            <div class="alert alert-success" role="alert">
                                <p>
                                    You have updated your password successfully.
                                </p>
                            </div>
                        }
                        else{

                            <form class="login-form" asp-action="ResetPassword">
                                

                                <div asp-validation-summary="All" class="text-danger"></div>
                                <input type="hidden" asp-for="UserId" class="form-control" />
                                <input type="hidden" asp-for="Token" class="form-control" />

                                <div class="text-center p-t-5">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </div>

                                <div class="form-group" aria-required="true">
                                    <input class="form-control rounded-left" required type="password" placeholder="Set New Password" asp-for="@Model.NewPassword">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>

                                </div>

                                <div class="form-group" aria-required="true">
                                    <input class="form-control rounded-left" required type="password" placeholder="Confirm Password" asp-for="@Model.ConfirmNewPassword">
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>

                                </div>

                                <div class="form-group">
                                    <button id="forgotBtn" type="submit" class="btn btn-primary rounded submit p-2 px-5"><span class="text-warning"><strong> Reset 
                                        password
                                    </strong></span></button>
                                    <span id="spinnerDiv"></span>
                                </div>


                            </form>

                        }

                        <br />
                        <br />
                        <br />
                        <div class="text-center p-t-50">

                            Back to
                            <a class="txt2" asp-area="Identity" asp-page="/Account/Login">
                                <b>Login</b>

                                <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    
</section>


    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <script src="js/main.js"></script>

</body>
</html>
