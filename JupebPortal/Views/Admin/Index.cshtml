@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> userManager
@inject SignInManager<ApplicationUser> signInManager
@model JupebPortal.Models.ApplicationUser;
@{
    ViewData["Title"] = "Admin Page";
    //Layout = "~/Views/Shared/_Layout with sidebar.cshtml";
}
<br />
<div>
    <h5 class="text-white bg-black">ADMIN DASHBOARD</h5>
</div>
<br />
<br />
<br />

<div class="containers">



    <div class="row mb-4">

        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin") || User.IsInRole("Bursary officer") || User.IsInRole("Admission officer"))
        {
            <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-header p-3 pt-2">
                        <div class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute">
                            @*<i class="material-icons opacity-10">weekend</i>*@
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="red" class="bi bi-person-fill-check" viewBox="0 0 16 16">
                                <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm1.679-4.493-1.335 2.226a.75.75 0 0 1-1.174.144l-.774-.773a.5.5 0 0 1 .708-.708l.547.548 1.17-1.951a.5.5 0 1 1 .858.514ZM11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                <path d="M2 13c0 1 1 1 1 1h5.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.544-3.393C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4Z" />
                            </svg>
                        </div>
                        <div class="text-end pt-1">
                            <h4 class="mb-0 font-weight-bolder text-danger">@ViewBag.Users </h4>
                            <p class="text-sm mb-0 text-capitalize text-danger">TOTAL USERS</p>
                        </div>
                    </div>
                    <hr class="dark horizontal my-0">
                    <div class="card-footer p-3">
                        <p class="mb-0"><span class="text-danger text-sm font-weight-bolder"></p>
                    </div>
                </div>
            </div>


            <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-header p-3 pt-2">
                        <div class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute">

                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="blue" class="bi bi-window-plus" viewBox="0 0 16 16">
                                <path d="M2.5 5a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1ZM4 5a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1Zm2-.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0Z" />
                                <path d="M0 4a2 2 0 0 1 2-2h11a2 2 0 0 1 2 2v4a.5.5 0 0 1-1 0V7H1v5a1 1 0 0 0 1 1h5.5a.5.5 0 0 1 0 1H2a2 2 0 0 1-2-2V4Zm1 2h13V4a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v2Z" />
                                <path d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Zm-3.5-2a.5.5 0 0 0-.5.5v1h-1a.5.5 0 0 0 0 1h1v1a.5.5 0 0 0 1 0v-1h1a.5.5 0 0 0 0-1h-1v-1a.5.5 0 0 0-.5-.5Z" />
                            </svg>
                        </div>
                        <div class="text-end pt-1">
                            <h4 class="mb-0 font-weight-bolder text-primary">@ViewBag.numForms</h4>
                            <p class="text-sm mb-0 text-capitalize text-primary">APPLICATIONS SUBMITTED</p>
                        </div>
                    </div>
                    <hr class="dark horizontal my-0">
                    <div class="card-footer p-3">
                        <p class="mb-0">
                            <span class="text-success text-sm font-weight-bolder">
                                <a asp-controller="ApplicationForm" asp-action="Index" class="small-box-footer mt-1">More info <i class="bi bi-info-circle-fill"></i></a>
                            </span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-header p-3 pt-2">
                        <div class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute">
                            @*<i class="material-icons opacity-10">weekend</i>*@

                            <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="green" class="bi bi-amd" viewBox="0 0 16 16">
                                <path d="m.334 0 4.358 4.359h7.15v7.15l4.358 4.358V0H.334ZM.2 9.72l4.487-4.488v6.281h6.28L6.48 16H.2V9.72Z" />
                            </svg>
                        </div>
                        <div class="text-end pt-1">
                            <h4 class="mb-0 font-weight-bolder text-success">@ViewBag.Payment </h4>
                            <p class="text-sm mb-0 text-capitalize text-success">SUCCESSFUL PAYMENTS</p>
                        </div>
                    </div>
                    <hr class="dark horizontal my-0">
                    <div class="card-footer p-3 font-weight-bolder">
                        <a asp-controller="Payments" asp-action="Index" class="small-box-footer mt-1 text-success">View <i class="bi bi-list-check"></i></a>
                    </div>
                </div>
            </div>

            
            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin") || User.IsInRole("Bursary officer"))
            {

                <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                    <div class="card">
                        <div class="card-header p-3 pt-2">
                            <div class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute">
                                @*<i class="material-icons opacity-10">weekend</i>*@
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#17979D" class="bi bi-building-fill-down" viewBox="0 0 16 16">
                                    <path d="M12.5 9a3.5 3.5 0 1 1 0 7 3.5 3.5 0 0 1 0-7Zm.354 5.854 1.5-1.5a.5.5 0 0 0-.708-.708l-.646.647V10.5a.5.5 0 0 0-1 0v2.793l-.646-.647a.5.5 0 0 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0Z" />
                                    <path d="M2 1a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v7.256A4.493 4.493 0 0 0 12.5 8a4.493 4.493 0 0 0-3.59 1.787A.498.498 0 0 0 9 9.5v-1a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .39-.187A4.476 4.476 0 0 0 8.027 12H6.5a.5.5 0 0 0-.5.5V16H3a1 1 0 0 1-1-1V1Zm2 1.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5Zm3 0v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5Zm3.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1ZM4 5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5ZM7.5 5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1Zm2.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5ZM4.5 8a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1Z" />
                                </svg>
                            </div>
                            <div class="text-end pt-1">
                                <h4 class="mb-0 font-weight-bolder text-info">  <b>₦</b>@ViewBag.AppFee </h4>
                                <p class="text-sm mb-0 text-capitalize text-info">APPLICATION FEE</p>
                            </div>
                        </div>
                        <hr class="dark horizontal my-0">
                        <div class="card-footer p-3">
                            <p class="mb-0"><span class="text-info text-sm font-weight-bolder">Active </span>Till date...</p>
                        </div>
                    </div>
                </div>

            }
        }
        <br />
        <br />
        <hr />
    </div>
</div>


