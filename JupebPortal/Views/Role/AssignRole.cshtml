@model JupebPortal.ViewModels.AssignRoleViewModel

<h2>Assign Role</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.UserId, "User:")
        @Html.DropDownListFor(m => m.UserId, new SelectList(Model.Users, "Id", "UserName"), "Select user", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RoleId, "Role:")
        @Html.DropDownListFor(m => m.RoleId, new SelectList(Model.Roles, "Id", "Name"), "Select role", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RoleId)
    </div>

    <button type="submit" class="btn btn-primary">Assign Role</button>
}
