@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Programme List</h2>
    </div>
    <div class="col-7 text-end">
        <a asp-controller="Role" asp-action="UserRoles" class="btn btn-primary">View User Roles</a>
        <a asp-controller="Role" asp-action="AssignRole" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> &nbsp; Assign Role</a>
        <a asp-controller="Role" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> &nbsp; Add New Role</a>
    </div>


</div>
@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                Role Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @item.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
