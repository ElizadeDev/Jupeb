@model JupebPortal.Models.ApplicationForm;
@using JupebPortal.Enums;
@using Microsoft.AspNetCore.Identity;
@using (Html.BeginForm("Create", "ApplicationForm", FormMethod.Post)) ;

@{
    ViewData["Title"] = "Edit Application Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4>Application Form</h4>
<hr />
<div class="page-wrapper p-t-100 p-b-50">
    <div class="wrapper wrapper--w900">
        <div class="card card-6">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        @Html.HiddenFor(m => m.Id)
                    </div>
                    
                    <div class="form-group">
                        @Html.HiddenFor(m => m.UserId)
                    </div>
                    <div class="form-group">
                        <label class="control-label">Surname</label>
                        <input asp-for="Surname" value="@ViewBag.SurName" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label class="control-label">First name</label>
                        <input asp-for="FirstName" value="@ViewBag.FirstName" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Other name</label>
                        <input asp-for="OtherName" value="@ViewBag.OtherName" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input asp-for="Email" value="@ViewBag.Email" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group border-warning">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    

                    <div class="form-group row col-12 d-flex">

                        <div class="form-group col-5">
                            <label asp-for="DateOfBirth" class="control-label"></label>
                            <input asp-for="DateOfBirth" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="form-group col-5">
                            <label asp-for="Gender" class="control-label"></label>
                            @Html.DropDownListFor(model => model.Gender, Enum.GetValues(typeof(Gender)).Cast<Gender>().Select(e => new SelectListItem { Text = e.ToString(), Value = e.ToString() }), "Select an option", new{@class="form-select"})
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row col-12 d-flex">
                        <div class="form-group col-5">
                            <label asp-for="StateOfOrigin" class="control-label"></label>
                            @Html.DropDownListFor(model => model.StateOfOrigin, Enum.GetValues(typeof(State)).Cast<State>().Select(e => new SelectListItem { Text = e.ToString(), Value = e.ToString() }), "Select an option", new{@class="form-select"})
                            <span asp-validation-for="StateOfOrigin" class="text-danger"></span>
                        </div>
                        
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="GuardName" class="control-label"></label>
                        <input asp-for="GuardName" class="form-control" />
                        <span asp-validation-for="GuardName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GuardEmail" class="control-label"></label>
                        <input asp-for="GuardEmail" class="form-control" />
                        <span asp-validation-for="GuardEmail" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="GuardPhone" class="control-label"></label>
                        <input asp-for="GuardPhone" class="form-control" />
                        <span asp-validation-for="GuardPhone" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mt-3">
                        <label asp-for="Programme1Id" class="control-label"></label>
                        <select asp-for="Programme1Id" class="form-control" asp-items="ViewBag.Programme1Id"></select>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Programme2Id" class="control-label"></label>
                        <select asp-for="Programme2Id" class="form-control" asp-items="ViewBag.Programme2Id"></select>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Next &raquo;" class="btn btn-primary " />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




<div class="row">
    <div class="col-md-4">
    </div>
</div>

