@model List<JupebPortal.ViewModels.PaymentsViewModel>

@{
    ViewData["Title"] = "Payments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Payments</h2>
    </div>

    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> &nbsp; Add Payment</a>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%" id="myTable">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Name
            </th>
            <th>
                RRR
            </th>
            <th>
                Transaction ID
            </th>
            <th>
                Amount
            </th>
            <th>
                Purpose
            </th>

            <th>
                Date
            </th>
            <th></th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderByDescending(p => p.Payment.PaymentDate))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment.PaymentRef)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment.TransactionID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment.Purpose)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Payment.PaymentDate)
                </td>
                <td>
                    @if (item.Payment.IsSuccess == false)
                    {
                        <a id="@item.Payment.TransactionID" class="btn btn-primary btn-sm" role="button" asp-controller="Admin" asp-action="VerifyPayment" asp-route-transactionId="@item.Payment.TransactionID">Check</a>
                    }
                </td>


                @*<td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>*@
            </tr>
        }
    </tbody>
</table>


@section scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/luxon/2.3.1/luxon.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            DataTable.datetime('dd LL yyyy HH: mm: ss');
            new DataTable('#myTable', {

                //order: [[5, 'desc']]
                "ordering": false
            });

        });

    </script>
}