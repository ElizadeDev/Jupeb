@page
@model LoginModel

@{
   
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/logintemplate/css/style.css" rel="stylesheet" />

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<div class="icon d-flex align-items-center justify-content-center">
                            <img class ="img" src="~/images/elizade.png" />
						</div>
						<h3 class="text-center mb-4">Have an account?</h3>
                        <hr />
                        <form id="account" method="post" class="login-form">
							<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
							<div class="form-group">
								<input asp-for="Input.Email" type="text" class="form-control rounded-left" placeholder="Email" required />
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>
							<div class="form-group d-flex">
                                <input asp-for="Input.Password" type="Password" class="form-control rounded-left" placeholder="Password" required />
								<span asp-validation-for="Input.Password" class="text-danger"></span>
							</div>
							<div class="form-group d-md-flex">
								<div class="w-50">
									<label asp-for="Input.RememberMe" class="checkbox-wrap checkbox-primary">
										<input type="checkbox" checked asp-for="Input.RememberMe" />
										<span class="checkmark"></span>
										@Html.DisplayNameFor(m => m.Input.RememberMe)
									</label>
								</div>
								<div class="w-50 text-md-right">
									@*<a href="#">Forgot Password</a>*@
                                    
                                        <p>
                                        <a asp-controller="UserAccount" asp-action="ForgotPassword">Forgot your password?</a>
                                        </p>
                                    <hr />
                                        <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><b>Create Account</b></a>
                                        </p>
                                        @*<p>
                                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                        </p>*@
                                    
								</div>
							</div>
							<div class="form-group">
                                <button type="submit" class="btn btn-primary rounded submit p-3 px-5"><span class="text-warning"><strong> Login</strong></span></button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="js/jquery.min.js"></script>
	<script src="js/popper.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/main.js"></script>

</body>
</html>















